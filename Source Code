public static void add_product()throws IOException
{
String car_name;
String car_code;
int qoh=0;
double rate;
String rep;
do
{
BufferedReader isr=new BufferedReader(new InputStreamReader(System.in));
System.out.println("\t\t########   Add A Product    #########");
System.out.println("\t\t##### 1.>Enter car_code         #####");
System.out.println("\t\t##### 2.>Enter car_name         #####");
System.out.println("\t\t##### 3.>Enter Quantity on hand #####");
System.out.println("\t\t##### 4.>Enter Rate             #####");
System.out.println("\t\t 1.>");car_code=isr.readLine();
System.out.println("\t\t 2.>");car_name=isr.readLine();

 

System.out.println("\t\t 4.>");rate=Double.parseDouble(isr.readLine());
System.out.println(" are you sure you want to add the record to the file?(y/n)");
char c=(char)isr.read();
if((c=='Y')||(c=='y'))
{
FileWriter f=new FileWriter("car.txt",true);
BufferedWriter b=new BufferedWriter (f);
PrintWriter p=new PrintWriter(b);
p.print(car_code +"\t");
p.print(car_name+"\t");
p.print(qoh+"\t");
p.println(rate);
p.close();
b.close();
f.close();
}
else
System.out.println("Record not added to the file ");
System.out.println("Do you want to add more cars in the stock?");
BufferedReader read=new BufferedReader(new InputStreamReader(System.in));
rep=read.readLine();
}while(rep.equalsIgnoreCase("Y"));
}

public void reader()throws IOException
{
FileReader f=new FileReader("customers.txt");
BufferedReader b=new BufferedReader(f);
String text;
while((text=b.readLine())!=null)
{
System.out.println(text);
}
}
}

 

 

   
